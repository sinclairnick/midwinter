{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "midwinter": ["./src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
